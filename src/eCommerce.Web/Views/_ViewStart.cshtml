@{
    if (ViewContext.RouteData.Values["controller"].ToString().Equals("User", StringComparison.InvariantCultureIgnoreCase))
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
    else if (ViewContext.RouteData.Values["controller"].ToString().Equals("Product", StringComparison.InvariantCultureIgnoreCase))
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
    else if (ViewContext.RouteData.Values["controller"].ToString().Equals("Error", StringComparison.InvariantCultureIgnoreCase))
    {
        Layout = "~/Views/Shared/_NoLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
